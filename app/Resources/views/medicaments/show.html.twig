{% extends 'base.html.twig' %}

{% block body %}
    <h1>Medicament</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medicament.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ medicament.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ medicament.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ medicament.price }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ medicament.quantite }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if medicament.createdAt %}{{ medicament.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if medicament.updatedAt %}{{ medicament.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fournisseur_medicaments_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('fournisseur_medicaments_edit', { 'id': medicament.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
